<FSynInput>:
    name:"FSynInput"
    word: a  
    Label:
        text:"Enter your word : "
        font_size:30
        font_name:'Comic'
        pos_hint:{"x":0.45,"y":0.65}
        size_hint:0.1,0.1
    EnterWord:
        id:a
        multiline:False
        pos_hint:{"x":0.35,"y":0.45}
        #size_hint:0.2,0.2
    GreenButton:
        text:"Back"
        on_release:app.root.current="FindWindow"
        pos_hint:{"x":0.2,"y":0.15}
    GreenButton:
        text:"Submit"
        on_press:
            root.manager.get_screen('FSynRes').res.text =root.syn(a.text)
        on_release:app.root.current="FSynRes"
        pos_hint:{"x":0.6,"y":0.15}
    
        
        #size_hint:0.2,0.2

