<FRhyOpt>:
    name:"FRhyOpt"
    Label:
        text:"Do you want your rhyming word to be related to some other word ?"
        text_size:self.width,None
        font_size:30
        font_name:'Comic'
        pos_hint:{"x":0.2,"y":0.65}
        size_hint:0.6,0.2
        halign:'center'
    GreenButton:
        text:"YES"
        pos_hint:{"x":0.2,"y":0.3}
    
    GreenButton:
        text:"NO"
        pos_hint:{"x":0.6,"y":0.3}
        on_press:
            root.manager.get_screen('FRhyDirectRes').res.text =root.rhy(root.manager.get_screen('FRhyInput').word.text)
        on_release:app.root.current="FRhyDirectRes"
