<SmoothButton@Button>:
    background_color:(0,0,0,0)
    background_normal:''
    back_color: (0.565, 0.557, 0.698,0.8)
    border_radius:[0,35,0,35]
    font_name:'Comic'
    
    canvas.before:
        Color:
            rgba:self.back_color
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:self.border_radius
            
<GreenButton@Button>:
    background_color:(0,0,0,0)
    background_normal:''
    back_color: (0.345, 0.682, 0.435 , 1)
    border_radius:[15]
    font_name:'Comic'
    size_hint:0.2,0.1
    font_size:25
    color:1, 1, 1,1
    text_size: self.size     
    halign: 'center'
    valign: 'center'
    canvas.before:
        Color:
            rgba:self.back_color
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:self.border_radius

<EnterWord@TextInput>:
    font_name:'Comic'
    font_size:25
    size_hint:0.3,0.08
    halign: 'center'
    valign: 'center'
    multiline:False
    # pos_hint:{"x":,"y":}
<Output@Label>:
    font_name:'Roboto'
    valign: 'center'
    background_color:(0,0,0,0)
    background_normal:''
    back_color: (0.565, 0.557, 0.698,0.8)
    border_radius:[35,35,35,35]
    size_hint:0.7,0.7
    canvas.before:
        Color:
            rgba:self.back_color
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:self.border_radius
    










